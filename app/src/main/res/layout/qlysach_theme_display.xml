<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_addvocab"
        android:background="@drawable/color_backgroud"/>
    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3pt"
        android:text="THEME"
        android:textColor="@color/black"
        android:textSize="15pt"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5pt">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3pt">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Id theme:"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_id_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="8pt"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8pt">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="ID link bài giảng:"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_url_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="8pt"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8pt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TỪ VỰNG"
                android:textColor="#1B32A5"
                android:textSize="11pt"
                android:textStyle="bold|italic" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/re_listvocab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--            <include layout="@layout/qlysach_theme_main"/>-->
    </LinearLayout>

</LinearLayout>