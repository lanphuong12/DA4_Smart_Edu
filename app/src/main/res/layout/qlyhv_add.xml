<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3pt"
            android:text="THÔNG TIN HỌC VIÊN"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Họ tên:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/et_nameHV"
                        app:errorEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nhập họ và tên HV"
                        android:textSize="8pt" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Lớp:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <Spinner
                        android:id="@+id/sp_class"
                        app:errorEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Học phí:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/et_tuition"
                        app:errorEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nhập học phí"
                        android:textSize="8pt" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh:"
                        android:textColor="@color/black"
                        android:textSize="8pt"/>

                    <EditText
                        android:id="@+id/et_date_of_b"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="8pt" />

                    <ImageButton
                        android:id="@+id/bt_date_of_b"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20sp"
                        android:background="@drawable/calendar"
                        android:text="Chọn"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Họ tên PH:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/et_namePH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nhập tên PH"
                        android:textSize="8pt" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nhập email"
                        android:textSize="8pt" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="SĐT:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/edt_sdt"
                        app:errorEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="nhập số điện thoại"
                        android:inputType="phone"
                        android:textSize="8pt" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8pt">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nhập địa chỉ"
                        android:textSize="8pt" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bt_cancel_hv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20pt"
                        android:background="@drawable/button_selector"
                        android:onClick="Cancel_student"
                        android:text=""
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_addHV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:onClick="info_user"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>