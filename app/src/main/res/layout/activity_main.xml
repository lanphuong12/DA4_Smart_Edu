<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.activity_main1">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="TRANG CHỦ"
        android:background="@drawable/color_backgroud"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/sm"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="20sp"
            android:id="@+id/bt_Qly_lop"
            android:textSize="17dp"
            android:textStyle="bold"
            android:onClick="QlyLop"
            android:text="QUẢN LÝ LỚP HỌC"/>
        <Button
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="20sp"
            android:id="@+id/bt_Qly_hocvien"
            android:textSize="17dp"
            android:textStyle="bold"
            android:onClick="QlyHS"
            android:text="QUẢN LÝ HỌC VIÊN"/>
        <Button
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="20sp"
            android:id="@+id/bt_Qly_sach"
            android:textSize="17dp"
            android:textStyle="bold"
            android:onClick="QlySach"
            android:text="QUẢN LÝ SÁCH"/>
    </LinearLayout>

</LinearLayout>