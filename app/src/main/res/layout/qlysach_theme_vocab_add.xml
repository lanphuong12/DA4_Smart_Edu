<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10pt"
            android:text="VOCABULARY"
            android:textColor="@color/black"
            android:textSize="15pt"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="5pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã theme: "
                    android:textSize="8pt"
                    android:textColor="@color/black"  />

                <TextView
                    android:id="@+id/tv_id_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nhập mã theme"
                    android:textSize="8pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8pt">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Từ vựng: "
                    android:textSize="8pt"
                    android:textColor="@color/black"  />

                <EditText
                    android:id="@+id/ed_new_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nhập từ mới"
                    android:textSize="8pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8pt">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Nghĩa: "
                    android:textSize="8pt"
                    android:textColor="@color/black"  />

                <EditText
                    android:id="@+id/ed_meaning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nhập nghĩa"
                    android:textSize="8pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/bt_cancel_vocab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginRight="7pt"
                    android:text="" />

                <Button
                    android:id="@+id/bt_method_vocab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>