                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="SĐT:"
                        android:textColor="@color/black"
                        android:textSize="8pt" />

                    <EditText
                        android:id="@+id/edt_sdt"
                        android:layout_width="match_parent"
